<!-- Your existing script for page navigation -->
<script>
    function searchPages() {
        var searchTerm = document.getElementById("searchInput").value.toLowerCase();

        if (searchTerm === "timeline") {
            window.location.href = "timeline.html";
        } else if (searchTerm === "merchandise") {
            window.location.href = "merchandise.html";
        } else if (searchTerm === "founder") {
            window.location.href = "founder.html";
        } else if (searchTerm === "home") {
            window.location.href = "Project 1.html";
        } else {
            alert("Page not found");
        }
    }
</script>

<!-- Script for ChatGPT functionality -->
<script>
    function sendMessageToChatGPT() {
        // Get user input
        var userInput = document.getElementById("chatgpt-input").value;

        // Add user message to chat container
        document.getElementById("chatgpt-messages").innerHTML += "<p>User: " + userInput + "</p>";

        // Process the user input and get a response from ChatGPT
        // Replace the following line with the actual logic to communicate with ChatGPT API or library
        var chatGPTResponse = "Lego Robot: Thank you for your response";

        // Add ChatGPT response to chat container
        document.getElementById("chatgpt-messages").innerHTML += "<p>" + chatGPTResponse + "</p>";

        // Clear the input field
        document.getElementById("chatgpt-input").value = "";
    }
</script>

